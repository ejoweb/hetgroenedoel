{
	"version": 2,
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultGradients": false,
			"defaultPalette": false,
			"background": true,
			"text": true,
			"link": true,
			"palette": [
				{ "name": "Base", 	    "slug": "base", 	  "color": "#FFFFFF" },
				{ "name": "Contrast", 	"slug": "contrast",   "color": "#333333" },
				{ "name": "Contrast 2",	"slug": "contrast-2", "color": "#8A8A8A" },
				{ "name": "Primary", 	"slug": "primary",	  "color": "#2FAC66" }
			],
			"custom": true,
			"gradients": [],
			"duotone": [
				{ "name": "Black and white", "slug": "black-and-white", "colors": [ "#000000", "#ffffff" ] }
			]
		},
		"typography": {
			"fontFamilies": [],
			"fontSizes": [
				{ "name": "Small",    "slug": "small",    "size": "1rem" },
				{ "name": "Medium",   "slug": "medium",   "size": "clamp(1.125rem, 4vw, 1.25rem)" },
				{ "name": "Large",    "slug": "large",    "size": "1.5rem" },
				{ "name": "X-large",  "slug": "x-large",  "size": "2.125rem" },
				{ "name": "XX Large", "slug": "xx-large", "size": "2.875rem" }
			],
			"customFontSize": false,
            "lineHeight": true,
            "fontStyle": true,
			"fontWeight": true,
			"dropCap": false,
            "letterSpacing": false,
            "textDecoration": true,
            "textTransform": false
		},
		"border": {
			"color": true, 
			"radius": true, 
			"style": true, 
			"width": true
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "56rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{ "name": "1", "slug": "30", "size": "clamp(1rem, 4vw, 1rem)" },
				{ "name": "2", "slug": "40", "size": "clamp(1.5rem, 4vw, 1.5rem)" },
				{ "name": "3", "slug": "50", "size": "clamp(2.25rem, 4vw, 2.25rem)" },
				{ "name": "4", "slug": "60", "size": "clamp(3.5rem, 4vw, 4rem)" },
				{ "name": "5", "slug": "70", "size": "clamp(5.25rem, 4vw, 6rem)" }
			],
			"units": [ "%",	"px", "em", "rem", "vh", "vw" ]
		},
		"custom": {
			"typography": {
				"line-height": {
					"small": 1.1,
					"normal": 1.5
				}
			},
			"borderRadius": {
				"small": "6px",
				"medium": "10px"
			},
			"spacing": {
				"bannerHeight": "clamp(12rem, 20vw, 16rem)"
			},
			"layout": {
				"fullSize": "72rem"
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": 	  "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize":   "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--50)",
			"padding": {
				"top": "var(--wp--preset--spacing--50)",
				"right": "var(--wp--preset--spacing--50)",
				"bottom": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "currentColor"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"button": {
				"border": {
					"radius": "var(--wp--custom--border-radius--small)"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"heading": {
				"typography": {
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				},
				"color": {
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}				
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/column": {
				"border": {
					"radius": "var(--wp--custom--border-radius--medium)"
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--contrast-2)"
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
